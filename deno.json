{
  "name": "moonscript",
  "version": "1.0.0",
  "description": "A custom programming language interpreter with moon-themed syntax",
  "main": "main.ts",
  "scripts": {
    "start": "deno run --allow-read main.ts",
    "test": "deno run --allow-read main.ts",
    "dev": "deno run --allow-read --watch main.ts"
  },
  "imports": {
    "./": "./"
  },
  "compilerOptions": {
    "allowJs": true,
    "lib": ["deno.window"],
    "strict": true
  },
  "lint": {
    "rules": {
      "tags": ["recommended"]
    }
  },
  "fmt": {
    "files": {
      "include": ["**/*.ts", "**/*.js"]
    },
    "options": {
      "useTabs": true,
      "lineWidth": 80,
      "indentWidth": 2,
      "semiColons": true,
      "singleQuote": false,
      "proseWrap": "preserve"
    }
  }
} 